{
    "manifest_version": 3,
    "name": "Inklusiv",
    "version": "1.0",
    "description": "Copilot for web accessibility",
    "permissions": [
      "storage"
    ],
    "web_accessible_resources": [
      {
        "resources": ["assets/fonts/*"],
        "matches": ["<all_urls>"]
      }
    ],
    "content_scripts": [
          {
            "js": ["scripts/colorblind.js"],
            "matches": ["<all_urls>"]
          },
          {
            "js": ["scripts/adhd.js"],
            "matches": ["<all_urls>"]
          },
          {
            "js": ["scripts/dyslexia.js"],
            "matches": ["<all_urls>"]
          },
          {
            "js": ["scripts/explainPage.js"],
            "matches": ["<all_urls>"]
          }
        ],

    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
      }
    },
    "icons": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
}
  